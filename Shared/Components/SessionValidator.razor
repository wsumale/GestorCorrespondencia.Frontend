@if(!_hasAccess && !_notHasAccess){
    <Loader Loading="_loading" />
}

@if(_hasAccess){
	@ChildContent
}

@if(_notHasAccess){
    {
        <div style="margin: var(--rz-layout-body-margin); padding: var(--rz-layout-body-padding); text-align:center;">
            <RadzenStack JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Center" Gap="0" class="mt-5">

                <RadzenRow AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" class="mt-5">
                    <RadzenColumn Size="12" SizeXS="12" SizeMD="12">
                        <RadzenImage Path="images/lock.svg" class="w-75"></RadzenImage>
                    </RadzenColumn>
                </RadzenRow>

                <RadzenText TextStyle="TextStyle.H2" class="mt-3">No tienes los permisos necesarios para visualizar esta página.</RadzenText>
            </RadzenStack>
        </div>
    }
}