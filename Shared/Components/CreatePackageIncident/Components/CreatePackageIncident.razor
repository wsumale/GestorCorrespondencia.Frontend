<RadzenTemplateForm Data="@form">
	<RadzenRow>
		<RadzenColumn class="rz-display-flex rz-flex-column rz-align-items-center gap-3">

			<RadzenRow class="w-100">
				<RadzenColumn class="rz-display-flex rz-flex-column">
					<RadzenLabel Text="Tipo de incidencia" Component="IncidentType" />
					<RadzenDropDown @bind-Value="form.IncidentType" Data="@incidentType" TextProperty="Value" ValueProperty="Key" />
				</RadzenColumn>
			</RadzenRow>

			<RadzenRow class="w-100">
				<RadzenColumn class="rz-display-flex rz-flex-column">
					<RadzenLabel Text="Comentarios" Component="Comment" />
					<RadzenTextArea @bind-Value="form.Comment" Name="Comment" />
				</RadzenColumn>
			</RadzenRow>

			<RadzenRow class="w-100 rz-justify-content-end">
				<RadzenButton Text="Cancelar" ButtonType="ButtonType.Button" ButtonStyle="ButtonStyle.Danger" Click="Cancel" />
				<RadzenButton Text="Crear incidencia" ButtonType="ButtonType.Submit" />
			</RadzenRow>

		</RadzenColumn>
	</RadzenRow>
</RadzenTemplateForm>