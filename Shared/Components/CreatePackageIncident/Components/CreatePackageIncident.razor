@using GestorCorrespondencia.Frontend.Shared.Components.CreatePackageIncident.Model

<Loader Loading="@loading" />

<RadzenTemplateForm Data="@form" Submit="@OnSubmit" TItem="IncidentFormModel" class="rz-display-flex rz-flex-column gap-3">

	<DataAnnotationsValidator />

	<RadzenRow class="gap-0">
		<RadzenLabel Text="Tipo de incidencia" />
		<RadzenFormField class="w-100">
			<RadzenDropDown TValue="int?"
							Data="@incidentTypeValues"
							TextProperty="Description"
							ValueProperty="Value"
							@bind-Value="form.IncidentType" 
							Name="IncidentType" 
							class="rz-m-0"/>
		</RadzenFormField>
		<ValidationMessage For="@(() => form.IncidentType)" class="rz-message rz-messages-error" />
	</RadzenRow>

	<RadzenRow class="gap-0">
		<RadzenLabel Text="Comentarios" />
		<RadzenFormField class="w-100">
			<RadzenTextArea @bind-Value="form.Comment" Name="Comment" />
		</RadzenFormField>
		<ValidationMessage For="@(() => form.Comment)" class="rz-message rz-messages-error" />
	</RadzenRow>

	<RadzenRow class="w-100 rz-justify-content-end">
		<RadzenButton Text="Cancelar" ButtonType="ButtonType.Button" ButtonStyle="ButtonStyle.Danger" Click="Cancel" />
		<RadzenButton Text="Crear incidencia" ButtonType="ButtonType.Submit" />
	</RadzenRow>

</RadzenTemplateForm>