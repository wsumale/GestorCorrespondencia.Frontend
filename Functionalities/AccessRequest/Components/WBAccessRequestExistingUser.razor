@layout LoginLayout

@using GestorCorrespondencia.Frontend.Functionalities.AccessRequest.Model

<RadzenTemplateForm Data="Form" Submit="@OnSubmitAsync" TItem="WBAccessRequestExistingUserForm" class="form-solicitud">

    <DataAnnotationsValidator /> 

    <RadzenRow>
        <RadzenFormField Text="Código" Variant="Variant.Filled" class="w-100 rz-text-align-left">
            <RadzenNumeric @bind-Value="Form.EmployeeCode" Name="EmployeeCode" ShowUpDown="false" class="form-input" ReadOnly="@readOnlyEmployeeCode" autocomplete="off" />
        </RadzenFormField>
        <ValidationMessage For="@(() => Form.EmployeeCode)" class="rz-message rz-messages-error" />
    </RadzenRow>

    <RadzenRow>
        <RadzenFormField Text="Contraseña" Variant="Variant.Filled" class="w-100 rz-text-align-left">
            <RadzenPassword @bind-Value="Form.Password" Name="Password" class="form-input" automcomplete="off" />
        </RadzenFormField>
        <ValidationMessage For="@(() => Form.Password)" class="rz-message rz-messages-error" />
    </RadzenRow>

    <RadzenRow class="rz-display-flex rz-justify-content-center">
        <RadzenButton Text="Solicitar Acceso" IsBusy=@busy ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" class="solicitud-submit" />
    </RadzenRow>
</RadzenTemplateForm>